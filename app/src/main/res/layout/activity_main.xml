<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:id="@+id/main_layout">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/appbar">

            <com.google.android.material.appbar.MaterialToolbar
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:id="@+id/toolbar"
                app:title="Medicine Reminder"
                android:theme="@style/ThemeOverlay.MaterialComponents.Dark.ActionBar"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

            </com.google.android.material.appbar.MaterialToolbar>

        </com.google.android.material.appbar.AppBarLayout>

        <androidx.recyclerview.widget.RecyclerView

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/recyclerview"
            android:layout_below="@id/appbar">

        </androidx.recyclerview.widget.RecyclerView>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/fab"
            android:background="@color/colorPrimaryDark"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_margin="16dp"
            android:src="@drawable/add_icon">

        </com.google.android.material.floatingactionbutton.FloatingActionButton>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimaryDark"
        android:id="@+id/dialog_layout">

        <ImageView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/back_image"
            android:contentDescription="@string/contentdesc"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/cut_icon"
            android:layout_margin="10dp">

        </ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/newmed"
            android:textSize="25sp"
            android:layout_marginTop="70dp"
            android:textColor="@color/white"
            android:id="@+id/newmed_text"
            android:layout_centerHorizontal="true">

        </TextView>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:id="@+id/medicine_name_et"
            android:layout_below="@id/newmed_text"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:hint="@string/medname"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:drawablePadding="10dp"
            android:drawableStart="@drawable/med_icon"
            android:background="@drawable/et_bg"
            android:textColorHint="@color/gray"
            tools:ignore="Autofill,TextFields">

        </EditText>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:background="@drawable/et_bg"
            android:text="@string/time"
            android:id="@+id/time_btn"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"
            android:layout_below="@id/medicine_name_et">

        </Button>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/time_text"
            android:layout_toStartOf="@id/time_btn"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="25sp"
            android:layout_marginStart="16dp"
            android:layout_below="@id/medicine_name_et"
            android:layout_marginTop="10dp">

        </TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/days_layout"
            android:background="@drawable/et_bg"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_below="@id/time_text">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:layout_weight="1">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/sunday"
                    android:gravity="center"
                    android:textColor="@color/dark_grey"
                    tools:ignore="NestedWeights">

                </TextView>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/monday"
                    android:gravity="center"
                    android:textColor="@color/dark_grey"
                    tools:ignore="NestedWeights">

                </TextView>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/tuesday"
                    android:gravity="center"
                    android:textColor="@color/dark_grey"
                    tools:ignore="NestedWeights">

                </TextView>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/wednesday"
                    android:gravity="center"
                    android:textColor="@color/dark_grey"
                    tools:ignore="NestedWeights">

                </TextView>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/thursday"
                    android:gravity="center"
                    android:textColor="@color/dark_grey"
                    tools:ignore="NestedWeights">

                </TextView>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/friday"
                    android:gravity="center"
                    android:textColor="@color/dark_grey"
                    tools:ignore="NestedWeights">

                </TextView>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/saturday"
                    android:gravity="center"
                    android:textColor="@color/dark_grey"
                    tools:ignore="NestedWeights">

                </TextView>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal"
                android:layout_weight="1">

                <CheckBox

                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@null"
                    android:translationX="10dp"
                    android:layout_weight="1"
                    android:padding="3dp"
                    tools:ignore="NestedWeights">

                </CheckBox>

                <CheckBox

                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@null"
                    android:translationX="10dp"
                    android:layout_weight="1"
                    android:padding="3dp">

                </CheckBox>

                <CheckBox

                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@null"
                    android:translationX="10dp"
                    android:layout_weight="1"
                    android:padding="3dp">

                </CheckBox>

                <CheckBox

                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@null"
                    android:translationX="10dp"
                    android:layout_weight="1"
                    android:padding="3dp">

                </CheckBox>

                <CheckBox

                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@null"
                    android:translationX="10dp"
                    android:layout_weight="1"
                    android:padding="3dp">

                </CheckBox>
                <CheckBox

                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@null"
                    android:translationX="10dp"
                    android:layout_weight="1"
                    android:padding="3dp">

                </CheckBox>

                <CheckBox

                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@null"
                    android:translationX="10dp"
                    android:layout_weight="1"
                    android:padding="3dp">

                </CheckBox>

            </LinearLayout>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/days_layout"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/et_bg"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/quantity"
                android:id="@+id/quantity_text"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:textSize="17sp"
                android:textColor="@color/dark_grey">

            </TextView>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_below="@id/quantity_text"
                android:layout_centerHorizontal="true">

                <Button
                    android:layout_width="30dp"
                    android:layout_height="40dp"
                    android:id="@+id/sub_one_btn"
                    android:background="@color/colorPrimaryDark"
                    android:text="@string/subone"
                    android:textColor="@color/white">

                </Button>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:id="@+id/quantity"
                    android:gravity="center"
                    android:padding="3dp"
                    android:layout_marginStart="5dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="17sp"
                    android:layout_toEndOf="@id/sub_one_btn">

                </TextView>

                <Button
                    android:layout_width="30dp"
                    android:layout_height="40dp"
                    android:id="@+id/add_one_btn"
                    android:background="@color/colorPrimaryDark"
                    android:text="@string/addone"
                    android:layout_toEndOf="@id/quantity"
                    android:layout_marginStart="5dp"
                    android:textColor="@color/white">

                </Button>

            </RelativeLayout>


        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>

